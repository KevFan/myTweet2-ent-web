<div class="ui container">
  {{#if tweets}}
    <div class="ui centered three doubling stackable cards">
      {{#each tweets}}
        <div class="ui raised card">
          <div class="content">
            <div class="meta">
              <i class="calendar icon"></i> <span class="category">{{formatDate tweetDate}}</span>
            </div>
            <div class="ui center aligned middle aligned description">
              {{#if tweetImage}}<img class="ui medium image" src="{{tweetImage}}">{{/if}}
              <p>{{tweetText}}</p>
            </div>
          </div>
          <div class="extra content">
            <div class="left floated author">
              <a href="/view/{{tweetUser._id}}">
                {{#if tweetUser.image}}
                  <img class="ui avatar image" src="{{tweetUser.image}}"> {{tweetUser.firstName}} {{tweetUser.lastName}}
                {{else}}
                  <img class="ui avatar image" src="/images/user.png"> {{tweetUser.firstName}} {{tweetUser.lastName}}
                {{/if}}
              </a>
            </div>
            {{#if (isMyTweet ../user.id tweetUser.id)}}
              {{#if ../isCurrentUser}}
                <div class="right floated">
                  <a href="/deleteSpecificTweet/{{../user.id}}/{{_id}}">
                    <i class="red delete icon"></i>
                  </a>
                </div>
              {{/if}}
            {{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <section class="ui center aligned segment">
      You have no tweets yet. Start tweeting now to begin !!
    </section>
  {{/if}}
</div>